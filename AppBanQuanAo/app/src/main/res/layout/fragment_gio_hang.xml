<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GioHang.GioHangFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_Item_RecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_CartLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorXamTrang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_CartLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:background="@color/colorAccent"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá 200.000 VNĐ"
                android:textColor="@color/colorDen"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tongCong"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <Button
            android:id="@+id/cart_continute_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark"
            android:text="continue"
            android:textColor="@color/colorTrang"
            android:textSize="16sp"
            android:textStyle="bold"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>