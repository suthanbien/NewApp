<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"

    android:background="@drawable/backgroudnd_trang"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageView_AnhSP_TT"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/quanao1" />

    <TextView
        android:id="@+id/textView_Ten_DealsHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Quần Què 2"
        android:textAlignment="center"
        android:textColor="@color/colorDen"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_MoTa_DealsHot"
        app:layout_constraintEnd_toEndOf="@+id/imageView_AnhSP_TT"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView_AnhSP_TT"
        app:layout_constraintTop_toBottomOf="@+id/imageView_AnhSP_TT" />

    <TextView
        android:id="@+id/textView_MoTa_DealsHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Vải nilon xiêu xuyên"
        android:textAlignment="center"
        android:textColor="@color/colorXanhLa"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_Gia_DealsHot"
        app:layout_constraintEnd_toEndOf="@+id/textView_Ten_DealsHot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView_Ten_DealsHot"
        app:layout_constraintTop_toBottomOf="@+id/textView_Ten_DealsHot" />

    <TextView
        android:id="@+id/textView_Gia_DealsHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Chỉ từ: 200.000 VNĐ"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_MoTa_DealsHot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView_MoTa_DealsHot"
        app:layout_constraintTop_toBottomOf="@+id/textView_MoTa_DealsHot" />
</androidx.constraintlayout.widget.ConstraintLayout>