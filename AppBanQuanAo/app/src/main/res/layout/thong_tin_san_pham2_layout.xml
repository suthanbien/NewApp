<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thongTinSP2_Container"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_thongtinSP2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorXamTrang"
        android:padding="16dp"
        android:text="@string/thongTinSanPham"
        android:textSize="16sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_thongthinSP2_NoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/test"
        android:textColor="@color/colorDen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_thongtinSP2_title" />
</androidx.constraintlayout.widget.ConstraintLayout>