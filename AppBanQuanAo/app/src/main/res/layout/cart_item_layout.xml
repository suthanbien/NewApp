<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@color/colorTrang"
    android:backgroundTint="@color/colorAccent"
    android:elevation="3dp"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_cart_anhSp"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/quanao3" />

    <TextView
        android:id="@+id/textView_Cart_TenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Quần què"
        android:textColor="@color/colorDen"
        app:layout_constraintStart_toEndOf="@+id/imageView_cart_anhSp"
        app:layout_constraintTop_toTopOf="@+id/imageView_cart_anhSp" />

    <ImageView
        android:id="@+id/freeCouponIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView_Cart_TenSP"
        app:layout_constraintTop_toBottomOf="@+id/textView_Cart_TenSP"
        app:srcCompat="@mipmap/price_tag" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/txt_free_coupen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"


        android:text="Free 2 coupent"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/freeCouponIcon"
        app:layout_constraintTop_toBottomOf="@+id/textView_Cart_TenSP" />

    <TextView
        android:id="@+id/textView_Cart_GiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="400.000 VNĐ"
        android:textColor="@color/colorDen"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_free_coupen" />

    <TextView
        android:id="@+id/textView_Cart_GiaSPCu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="300.000VNĐ"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Cart_GiaSP"
        app:layout_constraintEnd_toStartOf="@+id/textView_Cart_GiaSP" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Cart_GiaSPCu"
        app:layout_constraintEnd_toEndOf="@+id/textView_Cart_GiaSPCu"
        app:layout_constraintStart_toStartOf="@+id/textView_Cart_GiaSPCu"
        app:layout_constraintTop_toTopOf="@+id/textView_Cart_GiaSPCu" />

    <TextView
        android:id="@+id/textView_cart_offer_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="offer applied"
        android:textColor="@color/colorHoanTat"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_Cart_GiaSP"
        app:layout_constraintTop_toBottomOf="@+id/textView_Cart_GiaSP" />

    <TextView
        android:id="@+id/textView_cart_coupons_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="coupons applied"
        android:textColor="@color/colorTieuDe"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cart_offer_applied"
        app:layout_constraintTop_toBottomOf="@+id/textView_cart_offer_applied" />

    <TextView
        android:id="@+id/textView_cart_SoLuongSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borther_backround"
        android:drawableEnd="@mipmap/sort_down"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Qty: 1"
        android:textColor="@color/colorDen"
        app:layout_constraintBottom_toBottomOf="@+id/textView_cart_coupons_applied"
        app:layout_constraintStart_toStartOf="@+id/txt_free_coupen"
        app:layout_constraintTop_toTopOf="@+id/textView_cart_offer_applied"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:id="@+id/kiemTra_MaGG_Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cart_coupons_applied">


        <TextView
            android:id="@+id/textView_KiemTraMGG_Cart_Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kiểm tra lại giá sau khi dùng mã"
            android:textColor="@color/colorTrang" />

        <Button
            android:id="@+id/buttonReDem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0"
            android:background="@drawable/borther_backround"
            android:text="REDEM"
            android:textColor="@color/colorTrang"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cart_remove_item_btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:background="@color/colorDo"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kiemTra_MaGG_Layout">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@mipmap/delete_bin"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Remove item"
            tools:ignore="RtlCompat" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>